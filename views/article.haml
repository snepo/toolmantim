- @page_title = "Snepo Research - #{@article.title}"

.article
  .about
    %h1= @article.title

    %p.author
      by
      = @article.by

    %p.published
      Published
      = @article.published.strftime("%B %d, %Y")
    


  .content= article_html(@article)

  .feedback
    %h1 Feedback and discussion
    %p
      For errors, updates or feedback please shoot an email to <span class="email">info@#{thisdomain}</span>.

  - previous_article, next_article = previous_article(@article), next_article(@article)

  - if (previous_article || next_article)
    .more-reading
      %h1 More reading&hellip;
      - if previous_article
        %p
          Previously:
          %a{:href => article_path(previous_article)}== #{previous_article.title}
      - if next_article
        %p
          Next up:
          %a{:href => article_path(next_article)}== #{next_article.title}

